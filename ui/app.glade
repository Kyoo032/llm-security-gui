<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk+" version="3.20"/>

  <object class="GtkWindow" id="main_window">
    <property name="can_focus">False</property>
    <property name="title">Garak LLM Security Tester</property>
    <property name="default_width">1400</property>
    <property name="default_height">900</property>
    <signal name="destroy" handler="on_main_window_destroy" swapped="no"/>

    <child>
      <object class="GtkBox" id="root_box">
        <property name="visible">True</property>
        <property name="can_focus">False</property>
        <property name="orientation">vertical</property>

        <!-- ═══════════ Main area: sidebar + content ═══════════ -->
        <child>
          <object class="GtkBox" id="wizard_shell">
            <property name="visible">True</property>
            <property name="can_focus">False</property>
            <property name="orientation">horizontal</property>
            <property name="vexpand">True</property>
            <style><class name="wizard-shell"/></style>

            <!-- ─── Left Sidebar ─── -->
            <child>
              <object class="GtkBox" id="sidebar_box">
                <property name="visible">True</property>
                <property name="can_focus">False</property>
                <property name="orientation">vertical</property>
                <property name="width_request">250</property>
                <style><class name="sidebar"/></style>

                <!-- Sidebar title -->
                <child>
                  <object class="GtkLabel" id="sidebar_title">
                    <property name="visible">True</property>
                    <property name="can_focus">False</property>
                    <property name="label">Workflow Steps</property>
                    <property name="xalign">0</property>
                    <style><class name="sidebar-title"/></style>
                  </object>
                  <packing>
                    <property name="expand">False</property>
                    <property name="fill">True</property>
                    <property name="position">0</property>
                  </packing>
                </child>

                <!-- Step list (populated programmatically) -->
                <child>
                  <object class="GtkListBox" id="step_list">
                    <property name="visible">True</property>
                    <property name="can_focus">True</property>
                    <property name="selection_mode">none</property>
                    <property name="vexpand">True</property>
                    <style><class name="step-list"/></style>
                  </object>
                  <packing>
                    <property name="expand">True</property>
                    <property name="fill">True</property>
                    <property name="position">1</property>
                  </packing>
                </child>
              </object>
              <packing>
                <property name="expand">False</property>
                <property name="fill">True</property>
                <property name="position">0</property>
              </packing>
            </child>

            <!-- ─── Vertical separator ─── -->
            <child>
              <object class="GtkSeparator" id="sidebar_separator">
                <property name="visible">True</property>
                <property name="can_focus">False</property>
                <property name="orientation">vertical</property>
              </object>
              <packing>
                <property name="expand">False</property>
                <property name="fill">True</property>
                <property name="position">1</property>
              </packing>
            </child>

            <!-- ─── Content stack (7 step pages) ─── -->
            <child>
              <object class="GtkStack" id="step_stack">
                <property name="visible">True</property>
                <property name="can_focus">False</property>
                <property name="hexpand">True</property>
                <property name="vexpand">True</property>
                <property name="transition_type">slide-left</property>
                <property name="transition_duration">200</property>

                <!-- Step 1: Framework Setup (built programmatically) -->
                <child>
                  <object class="GtkScrolledWindow" id="step_1_scroll">
                    <property name="visible">True</property>
                    <property name="can_focus">True</property>
                    <property name="shadow_type">none</property>
                    <child>
                      <object class="GtkViewport" id="step_1_viewport">
                        <property name="visible">True</property>
                        <property name="can_focus">False</property>
                        <child>
                          <object class="GtkBox" id="step_1_page">
                            <property name="visible">True</property>
                            <property name="can_focus">False</property>
                            <property name="orientation">vertical</property>
                            <style><class name="content-area"/></style>
                          </object>
                        </child>
                      </object>
                    </child>
                  </object>
                  <packing>
                    <property name="name">step_1</property>
                  </packing>
                </child>

                <!-- Step 2: Authentication (built programmatically) -->
                <child>
                  <object class="GtkScrolledWindow" id="step_2_scroll">
                    <property name="visible">True</property>
                    <property name="can_focus">True</property>
                    <property name="shadow_type">none</property>
                    <child>
                      <object class="GtkViewport" id="step_2_viewport">
                        <property name="visible">True</property>
                        <property name="can_focus">False</property>
                        <child>
                          <object class="GtkBox" id="step_2_page">
                            <property name="visible">True</property>
                            <property name="can_focus">False</property>
                            <property name="orientation">vertical</property>
                            <style><class name="content-area"/></style>
                          </object>
                        </child>
                      </object>
                    </child>
                  </object>
                  <packing>
                    <property name="name">step_2</property>
                  </packing>
                </child>

                <!-- Step 3: Model Selection (built programmatically) -->
                <child>
                  <object class="GtkScrolledWindow" id="step_3_scroll">
                    <property name="visible">True</property>
                    <property name="can_focus">True</property>
                    <property name="shadow_type">none</property>
                    <child>
                      <object class="GtkViewport" id="step_3_viewport">
                        <property name="visible">True</property>
                        <property name="can_focus">False</property>
                        <child>
                          <object class="GtkBox" id="step_3_page">
                            <property name="visible">True</property>
                            <property name="can_focus">False</property>
                            <property name="orientation">vertical</property>
                            <style><class name="content-area"/></style>
                          </object>
                        </child>
                      </object>
                    </child>
                  </object>
                  <packing>
                    <property name="name">step_3</property>
                  </packing>
                </child>

                <!-- Step 4: Probe Selection (built programmatically) -->
                <child>
                  <object class="GtkScrolledWindow" id="step_4_scroll">
                    <property name="visible">True</property>
                    <property name="can_focus">True</property>
                    <property name="shadow_type">none</property>
                    <child>
                      <object class="GtkViewport" id="step_4_viewport">
                        <property name="visible">True</property>
                        <property name="can_focus">False</property>
                        <child>
                          <object class="GtkBox" id="step_4_page">
                            <property name="visible">True</property>
                            <property name="can_focus">False</property>
                            <property name="orientation">vertical</property>
                            <style><class name="content-area"/></style>
                          </object>
                        </child>
                      </object>
                    </child>
                  </object>
                  <packing>
                    <property name="name">step_4</property>
                  </packing>
                </child>

                <!-- Step 5: Configuration (built programmatically) -->
                <child>
                  <object class="GtkScrolledWindow" id="step_5_scroll">
                    <property name="visible">True</property>
                    <property name="can_focus">True</property>
                    <property name="shadow_type">none</property>
                    <child>
                      <object class="GtkViewport" id="step_5_viewport">
                        <property name="visible">True</property>
                        <property name="can_focus">False</property>
                        <child>
                          <object class="GtkBox" id="step_5_page">
                            <property name="visible">True</property>
                            <property name="can_focus">False</property>
                            <property name="orientation">vertical</property>
                            <style><class name="content-area"/></style>
                          </object>
                        </child>
                      </object>
                    </child>
                  </object>
                  <packing>
                    <property name="name">step_5</property>
                  </packing>
                </child>

                <!-- Step 6: Run Test (built programmatically) -->
                <child>
                  <object class="GtkScrolledWindow" id="step_6_scroll">
                    <property name="visible">True</property>
                    <property name="can_focus">True</property>
                    <property name="shadow_type">none</property>
                    <child>
                      <object class="GtkViewport" id="step_6_viewport">
                        <property name="visible">True</property>
                        <property name="can_focus">False</property>
                        <child>
                          <object class="GtkBox" id="step_6_page">
                            <property name="visible">True</property>
                            <property name="can_focus">False</property>
                            <property name="orientation">vertical</property>
                            <style><class name="content-area"/></style>
                          </object>
                        </child>
                      </object>
                    </child>
                  </object>
                  <packing>
                    <property name="name">step_6</property>
                  </packing>
                </child>

                <!-- Step 7: Results (built programmatically) -->
                <child>
                  <object class="GtkScrolledWindow" id="step_7_scroll">
                    <property name="visible">True</property>
                    <property name="can_focus">True</property>
                    <property name="shadow_type">none</property>
                    <child>
                      <object class="GtkViewport" id="step_7_viewport">
                        <property name="visible">True</property>
                        <property name="can_focus">False</property>
                        <child>
                          <object class="GtkBox" id="step_7_page">
                            <property name="visible">True</property>
                            <property name="can_focus">False</property>
                            <property name="orientation">vertical</property>
                            <style><class name="content-area"/></style>
                          </object>
                        </child>
                      </object>
                    </child>
                  </object>
                  <packing>
                    <property name="name">step_7</property>
                  </packing>
                </child>

              </object>
              <packing>
                <property name="expand">True</property>
                <property name="fill">True</property>
                <property name="position">2</property>
              </packing>
            </child>

          </object>
          <packing>
            <property name="expand">True</property>
            <property name="fill">True</property>
            <property name="position">0</property>
          </packing>
        </child>

        <!-- ═══════════ Status Bar ═══════════ -->
        <child>
          <object class="GtkBox" id="status_bar">
            <property name="visible">True</property>
            <property name="can_focus">False</property>
            <property name="orientation">horizontal</property>
            <property name="spacing">8</property>
            <style><class name="status-bar"/></style>

            <!-- Status indicator (dot + text) -->
            <child>
              <object class="GtkBox" id="status_indicator">
                <property name="visible">True</property>
                <property name="can_focus">False</property>
                <property name="orientation">horizontal</property>
                <property name="spacing">6</property>

                <child>
                  <object class="GtkLabel" id="status_dot">
                    <property name="visible">True</property>
                    <property name="can_focus">False</property>
                    <property name="label">●</property>
                    <style><class name="status-dot-pending"/></style>
                  </object>
                  <packing>
                    <property name="expand">False</property>
                    <property name="fill">False</property>
                    <property name="position">0</property>
                  </packing>
                </child>

                <child>
                  <object class="GtkLabel" id="status_text">
                    <property name="visible">True</property>
                    <property name="can_focus">False</property>
                    <property name="label">Initializing...</property>
                    <style><class name="status-text"/></style>
                  </object>
                  <packing>
                    <property name="expand">False</property>
                    <property name="fill">False</property>
                    <property name="position">1</property>
                  </packing>
                </child>
              </object>
              <packing>
                <property name="expand">False</property>
                <property name="fill">True</property>
                <property name="position">0</property>
              </packing>
            </child>

            <!-- Spacer -->
            <child>
              <object class="GtkBox" id="status_spacer">
                <property name="visible">True</property>
                <property name="can_focus">False</property>
                <property name="hexpand">True</property>
              </object>
              <packing>
                <property name="expand">True</property>
                <property name="fill">True</property>
                <property name="position">1</property>
              </packing>
            </child>

            <!-- Context info -->
            <child>
              <object class="GtkLabel" id="context_info">
                <property name="visible">True</property>
                <property name="can_focus">False</property>
                <property name="label"></property>
                <property name="xalign">1</property>
                <style><class name="context-info"/></style>
              </object>
              <packing>
                <property name="expand">False</property>
                <property name="fill">True</property>
                <property name="position">2</property>
              </packing>
            </child>
          </object>
          <packing>
            <property name="expand">False</property>
            <property name="fill">True</property>
            <property name="position">1</property>
          </packing>
        </child>

      </object>
    </child>
  </object>
</interface>
